.wdg-ft{height: 40px;line-height: 40px;font-size: $fs2;text-align: center;background-color: $cbg-secondary;color:$cf-secondary;width:100%; position:absolute; bottom:0; left:0;}

.wdg-doc{margin: 0 auto;width: 1200px;$clearfix();}